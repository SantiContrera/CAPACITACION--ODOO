<odoo>
    <!-- AcciÃ³n del wizard -->
    <record id="action_library_wizard_update" model="ir.actions.act_window">
        <field name="name">Cambiar Estado</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.wizard.update</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!--vista del wizard-->
    <record id="view_library_wizard_update_form" model="ir.ui.view">
        <field name="name">library.wizard.update.form</field>
        <field name="model">library.wizard.update</field>
        <field name="arch" type="xml">
            <form string="Cambiar Estado">
                <sheet>
                    <group>
                        <field name="new_status"/>
                        <field name="contacto_id" attrs="{'invisible':[('new_status','in',['stant'])]}"/>
                        <field name="devolver" attrs="{'invisible':[('new_status','!=','alquilado')]}"/>    
                    </group>
                    <footer>
                        <button string="Aplicar" type="object" name="action_change_status" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

